procedure TfrmLogin.cxtNamaUserKeyPress(Sender: TObject; var Key: Char);
begin
  if Key = #13 then cxtPass.SetFocus;
end;

procedure TfrmLogin.cxtPassKeyPress(Sender: TObject; var Key: Char);
begin
  if Key = #13 then btnLoginClick(nil);
end;

