  object zqrKS: TZReadOnlyQuery
    SQL.Strings = (
      
        'select a.no_bukti, a.tanggal, a.kode_brg, b.deskripsi, if(a.tipe' +
        '='#39'i'#39',a.qty,0) masuk, if(a.tipe='#39'o'#39',a.qty,0) keluar,'
      '  @stok := @stok + case when a.tipe = '#39'i'#39' then a.qty '
      '  else -a.qty'
      '  end as stok_akhir'
      'from tbl_history a '
      'left join tbl_barang b on b.id = a.id_brg'
      'cross join (select @stok := :stok_awal) x'
      'where a.tanggal between :tgl1 and :tgl2 and a.id_brg = :id_brg')
